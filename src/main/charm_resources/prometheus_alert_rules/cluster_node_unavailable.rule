alert: SpringMusicUnitIsUnavailable
expr: up < 1
for: 0m
labels:
  severity: critical
annotations:
  summary: Spring Music node {{ $labels.juju_model }}/{{ $labels.juju_unit }} unavailable
  description: >
    The Spring Music node {{ $labels.juju_model }} {{ $labels.juju_unit }} is unavailable
    LABELS = {{ $labels }}
